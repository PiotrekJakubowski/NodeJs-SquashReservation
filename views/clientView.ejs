<!DOCTYPE html>
<html lang="en">
  <head> </head>
  <body>
    <div class="page-wrapper">
      <div class="table-wrapper">
        <% if (client.length > 0) {%>
        <table class="table table-hovered">
          <thead class="thead-dark">
            <tr>
              <th scope="col">ID</th>
              <th scope="col">First Name</th>
              <th scope="col">Last Name</th>
              <th scope="col">Email</th>
              <th scope="col">Phone Number</th>
            </tr>
          </thead>
          <tbody>
            <% client.forEach((client, index) => { %>
            <tr>
              <th scope="row"><%= client.id %></th>
              <td><%= client.first_name %></td>
              <td><%= client.last_name %></td>
              <td><%= client.phone_number %></td>
              <td><%= client.email %></td>
              <td>
                <a href="/web/editClient/<%= client.id %>" >Edit</a>
                |
                <a href="/web/deleteClient/<%= client.id %>" onclick="return confirm('Are you sure you want to delete the client?');">Delete</a>
              </td>
              <td>
                -----> <a href="/web/clientReservations/<%= client.id %>">Show Client Reservation</a>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
        <hr>
        <a class="float-right" href="/web/addClient" title="Add a New Client">Add Client</a>
        <% } else { %>
        <p class="text-center">No client found.</p>
        <% } %>
      </div>
    </div>
  </body>
</html>
